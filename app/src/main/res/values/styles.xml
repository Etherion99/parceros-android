<resources>
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/main</item>
        <item name="android:windowBackground">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/main</item>
        <item name="android:windowBackground">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Ligth.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Ligth.NoActionBar.alt" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="android:windowBackground">@color/backgroundLigth</item>
        <item name="android:navigationBarColor">@color/accent</item>
        <item name="colorAccent">@color/accentGradient</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/v_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
